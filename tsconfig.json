{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2015",
        "lib": ["ES2015"],
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "moduleResolution": "Node",
        "inlineSources": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": ["./src/types", "./node_modules/@types"],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}